<script type="text/javascript" charset="utf-8">

var PopArr = null;
	$("#face").click(function(){
		$.ajax({
			url: "/numbers/",
			type: "POST",
			data: {
				"remote" : true,
				"number" : {
					"calc": $("#nums").val()	
				},
				
			},
			success: function() {
				alert("it worked!!");
			},
			error: function(jqXHR) {
				console.log(jqXHR);
			}
			
		});
	});
	
	$("#display").click(function(){
		$.ajax({
			url: "/numbers/",
			type: "GET",
			success: function(data) {
				// for (i in data) {
				// 	console.log(data[i]);
				// 	PopArr[i] = data[i].calc; 				
				// }
				PopArr = data;  
				// console.log(PopArr);
				var l = PopArr.length - 1;
				$("#showing").text(PopArr[l].number.calc);
 
			},
		});
	});
</script>

